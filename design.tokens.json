{
  "meta": {
    "brand": "supernova",
    "version": "1.0.0"
  },
  "theme": {
    "mode": "dark",
    "primary": "#00ff00",
    "onPrimary": "#ffffff",
    "bg": "#0a0a0a",
    "surface": "#151515",
    "text": "#ffffff",
    "muted": "#a1a1aa",
    "success": "#22c55e",
    "warning": "#f59e0b",
    "danger": "#ef4444"
  },
  "typography": {
    "fontFamily": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto",
    "scale": [
      12,
      14,
      16,
      18,
      20,
      24,
      30,
      36
    ],
    "lineHeight": 1.5
  },
  "radius": {
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 24,
    "full": 9999
  },
  "spacing": {
    "base": 8
  },
  "shadow": {
    "sm": "0 1px 2px rgba(0,0,0,.15)",
    "md": "0 6px 16px rgba(0,0,0,.25)",
    "lg": "0 12px 32px rgba(0,0,0,.35)"
  },
  "motion": {
    "duration": {
      "sm": 120,
      "md": 220,
      "lg": 400
    },
    "easing": "cubic-bezier(0.2,0.8,0.2,1)"
  }
}