{
  "meta": {
    "brand": "collab-creative-studio",
    "version": "2.0.0-neon"
  },
  "theme": {
    "mode": "dark",
    "primary": "#00ffff",
    "secondary": "#ff00ff",
    "accent": "#ffff00",
    "onPrimary": "#000000",
    "bg": "#0a0a0f",
    "surface": "#121218",
    "text": "#ffffff",
    "muted": "#8b5cf6",
    "success": "#00ff88",
    "warning": "#ffaa00",
    "danger": "#ff0066",
    "neonCyan": "#00ffff",
    "neonPink": "#ff00ff",
    "neonYellow": "#ffff00",
    "neonGreen": "#00ff88",
    "neonOrange": "#ff6600"
  },
  "typography": {
    "fontFamily": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto",
    "scale": [
      12,
      14,
      16,
      18,
      20,
      24,
      30,
      36,
      48,
      64
    ],
    "lineHeight": 1.5
  },
  "radius": {
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 24,
    "full": 9999
  },
  "spacing": {
    "base": 8
  },
  "shadow": {
    "sm": "0 1px 2px rgba(0,0,0,.15)",
    "md": "0 6px 16px rgba(0,0,0,.25)",
    "lg": "0 12px 32px rgba(0,0,0,.35)",
    "neonCyan": "0 0 10px #00ffff, 0 0 20px #00ffff, 0 0 30px #00ffff",
    "neonPink": "0 0 10px #ff00ff, 0 0 20px #ff00ff, 0 0 30px #ff00ff",
    "neonYellow": "0 0 10px #ffff00, 0 0 20px #ffff00, 0 0 30px #ffff00"
  },
  "motion": {
    "duration": {
      "sm": 120,
      "md": 220,
      "lg": 400
    },
    "easing": "cubic-bezier(0.2,0.8,0.2,1)"
  }
}
