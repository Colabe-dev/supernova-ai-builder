# Environment
NODE_ENV=development

# Dev Console Features
DEV_FS_ENABLE=true
DEV_TERMINAL_ENABLE=true
DEV_APPROVALS_OPEN=true
DEV_IAP_OPEN=true

# Sentry Configuration (optional - leave empty to disable)
SENTRY_DSN=
SENTRY_ENV=dev
SENTRY_TRACES_SAMPLE_RATE=0.1

# Collab Pay Integration
COLLAB_PAY_API_BASE=http://localhost:4000
COLLAB_PAY_SECRET=dev
COLLAB_PAY_WEBHOOK_SECRET=dev_webhook_secret_12345

# IAP Configuration
IAP_STRICT=false
IAP_USE_SANDBOX=true
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_PACKAGE_NAME=com.collab.supernova
APPLE_BUNDLE_ID=com.collab.supernova

# JWT & Session (configured via Replit Secrets)
# APP_JWT_SECRET=
# SESSION_SECRET=

# ====================================
# Security Extras (S4 Overlays)
# ====================================

# Auth Issuer (JWT minting with RS256)
AUTH_ISSUER=https://collab.supernova.auth
AUTH_AUDIENCE=supernova-api
JWKS_DIR=server/auth/jwks/keys
ISSUER_ADMIN_SECRET=
DEFAULT_TTL=3600

# Redis Cluster/Sentinel Rate Limiting (optional - falls back to memory)
# Single instance
# REDIS_URL=redis://localhost:6379

# Sentinel setup
# REDIS_SENTINEL=host1:26379,host2:26379
# REDIS_MASTER=mymaster

# Cluster setup
# REDIS_CLUSTER_NODES=host1:6379,host2:6379

# mTLS (Mutual TLS for internal services)
TLS_CA=certs/ca.pem
TLS_KEY=certs/server.key
TLS_CERT=certs/server.pem

# Internal service signature verification (zero-trust)
# INTERNAL_HMAC_SECRET=
